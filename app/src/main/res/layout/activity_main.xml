<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/buttonClickGame"
        android:layout_width="225dp"
        android:layout_height="170dp"
        android:onClick="clickOnClickGame"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215"
        app:srcCompat="@drawable/playgame" />

    <TextView
        android:id="@+id/textinfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Играть"
        android:textColor="@color/Yellow"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonClickGame"
        app:layout_constraintEnd_toEndOf="@+id/buttonClickGame"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/buttonClickGame" />

    <ImageButton
        android:id="@+id/buttonClickReference"
        android:layout_width="225dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:onClick="clickOnInfoActivity"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/buttonClickGame"
        app:layout_constraintStart_toStartOf="@+id/buttonClickGame"
        app:layout_constraintTop_toBottomOf="@+id/textinfo1"
        app:srcCompat="@drawable/info" />

    <TextView
        android:id="@+id/textinfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Справка"
        android:textColor="@color/Yellow"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonClickReference"
        app:layout_constraintEnd_toEndOf="@+id/buttonClickReference"
        app:layout_constraintStart_toStartOf="@+id/buttonClickReference" />

    <ImageButton
        android:id="@+id/buttonCLickInfo"
        android:layout_width="225dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:onClick="clickOnInfoGame"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonClickReference"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonClickReference"
        app:layout_constraintTop_toBottomOf="@+id/textinfo2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/infoprogram" />

    <TextView
        android:id="@+id/textinfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="О программе"
        android:textColor="@color/Yellow"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCLickInfo"
        app:layout_constraintEnd_toEndOf="@+id/buttonCLickInfo"
        app:layout_constraintStart_toStartOf="@+id/buttonCLickInfo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Your Destiny"
        android:textColor="@color/Yellow"
        android:textSize="54dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonClickGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>